import java.util.Scanner;

public class ManavKasaProgramı {

    public static void main(String[] args) {
       
  Double Tutar,
         Armut = 2.14,a,
         Elma = 3.67 ,e, 
         Domates = 1.11,d,
         Muz= 0.95 ,m,
         Patlıcan= 5.00,p;   
  
  Scanner keyboard= new Scanner (System.in);
  
        System.out.print("Kaç kilo armut alındı? :");
        a=keyboard.nextDouble();
        
        System.out.print("Kaç kilo elma alındı? :");
        e=keyboard.nextDouble();
        
        System.out.print("Kaç kilo domates alındı? :");
        d=keyboard.nextDouble();
        
        System.out.print("Kaç kilo muz alındı? :");
        m=keyboard.nextDouble();
        
        System.out.print("Kaç kilo patlıcan alındı? :");
        p=keyboard.nextDouble();
        
        Tutar= Armut*a + Elma*e + Domates*d + Muz*m + Patlıcan*p;
        
        System.out.println("Toplam tutarınız: "+Tutar);
        
        
    }
    
}
